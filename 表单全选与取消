        <script>
            let j_cbAll = document.querySelector('#j_cbAll')
            let input = document.querySelector('tbody').querySelectorAll('input')

            j_cbAll.addEventListener('click', function(){
                for(let i = 0; i < input.length; i++) {
                    input[i].checked = this.checked
                }
            })

            for(let i = 0; i < input.length; i++) {
                input[i].addEventListener('click', function() {
                    let flag = true
                    for(let i = 0; i < input.length; i++) {
                        if(!input[i].checked) {
                            flag = false
                            break
                        }
                    }
                    j_cbAll.checked = flag
                })
            }

        </script>
